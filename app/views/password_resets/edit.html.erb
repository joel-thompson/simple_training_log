<% provide(:title, 'Reset password') %>

<section class="section">
  <h1 class='subtitle'>Reset password</h1>

  <div class="columns is-centered">
    <div class="column is-one-third">
      <%= form_for(@user, url: password_reset_path(params[:id])) do |f| %>
        <%= render 'shared/error_messages', object: f.object %>

        <%= hidden_field_tag :email, @user.email %>

        <div class="field">
          <%= f.label :password, class: 'label' %>
          <div class="control">
            <%= f.password_field :password, class: 'input', type: 'password' %>
          </div>
        </div>

        <div class="field">
          <%= f.label :password_confirmation, "Confirmation", class: 'label' %>
          <div class="control">
            <%= f.password_field :password_confirmation, class: 'input', type: 'password' %>
          </div>
        </div>

        <div class="field">
          <div class="control">
            <%= f.submit "Update Password", class: "button is-link" %>
          </div>
        </div>

      <% end %>
    </div>
  </div>
</section>
