<%= form_for(@martial_art) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <%= f.label :type %>
  <%= f.select(:type) do %>
    <% [['Jiu Jitsu', "MartialArts::JiuJitsu"], ['Other', "MartialArts::MartialArt"]].each do |c| -%>
      <%= content_tag(:option, c.first, value: c.last) %>
    <% end %>
  <% end %>

  <%= f.label :occurred %>
  <%= f.date_select :occurred_at, class: 'form-control' %>


  <%= f.label :notes %>
  <%= f.text_area :notes, class: 'form-control' %>



  <%= f.submit yield(:button_text), class: "btn btn-primary" %>
<% end %>
