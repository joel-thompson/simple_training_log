<%= form_for(@martial_art, as: :martial_art,
                           url: form_path) do |f| %>

  <%= render 'shared/error_messages', object: f.object %>
  <%= render "_components/forms/select", form: f, attribute: :type, choices: @choices %>
  <%= render "_components/forms/date_field", form: f, attribute: :occurred_date %>
  <%= render "_components/forms/select", form: f, attribute: :occurred_time, choices: @time_choices %>
  <%= render "_components/forms/text_field", form: f, attribute: :location, placeholder: "e.g. Berkeley" %>

  <%=
    render "_components/forms/number_field", form: f,
    attribute: :duration_in_minutes,
    placeholder: "e.g. 1",
    min: 0
  %>

  <%=
    render "_components/forms/text_area", form: f,
    attribute: :goal,
    placeholder: "e.g. armbar five times"
  %>

  <%=
    render "_components/forms/text_area", form: f,
    attribute: :goal_result,
    placeholder: "e.g. hit the armbar"
  %>

  <%=
    render "_components/forms/text_area", form: f,
    attribute: :notes,
    rows: 11,
    placeholder: "e.g. Had a great time"
  %>

  <%= render "_components/forms/submit", form: f, text: yield(:button_text) %>
<% end %>
