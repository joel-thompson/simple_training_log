<%= form_for(@technique) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <%= hidden_field_tag :martial_art_id, @martial_art.id %>

  <%=
    render "_components/forms/text_field", form: f,
    attribute: :name,
    placeholder: "e.g. flying gogoplata"
  %>

  <%=
    render "_components/forms/text_area", form: f,
    attribute: :details,
    placeholder: "e.g. sweep the leg"
  %>

  <%=
    render "_components/forms/text_area", form: f,
    attribute: :notes,
    placeholder: "e.g. seems easy when mounted"
  %>

  <%= render "_components/forms/submit", form: f, text: yield(:button_text) %>
<% end %>
