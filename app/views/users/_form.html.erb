<%= form_for(@user) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <div class="field">
    <%= f.label :name, class: label %>
    <div class="control">
      <%= f.text_field :name, class: 'input', type: 'text' %>
    </div>
  </div>

  <div class="field">
    <%= f.label :email %>
    <div class="control">
      <%= f.email_field :email, class: 'input', type: 'email' %>
    </div>
  </div>

  <div class="field">
    <%= f.label :password %>
    <div class="control">
      <%= f.password_field :password, class: 'input', type: 'password' %>
    </div>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "Confirmation" %>
    <div class="control">
      <%= f.password_field :password_confirmation, class: 'input', type: 'password' %>
    </div>
  </div>

  <div class="field">
    <div class="control">
      <%= f.submit yield(:button_text), class: "button is-link" %>
    </div>
  </div>
<% end %>
