<%= form_for(@user) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <%= render "_components/forms/text_field", form: f, attribute: :name %>
  <%= render "_components/forms/email_field", form: f  %>
  <%= render "_components/forms/password_field", form: f %>
  <%= render "_components/forms/password_field", form: f, confirmation: true %>
  <%= render "_components/forms/submit", form: f, text: yield(:button_text) %>
<% end %>
