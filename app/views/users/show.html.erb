<% provide(:title, @user.name) %>
<section class="section">
  <div class="columns">
    <aside class="column is-one-third">
      <section class="user_info">
        <h1 class='subtitle'>
          <%= @user.name %>
          <br>

        </h1>
        <figure class="image is-96x96">
          <%= link_to gravatar_for(current_user, size: 96), current_user %>
        </figure>
      <br>
    </aside>
  </div>
</section>
