<% provide(:title, "Log in") %>


<section class="hero is-white">
  <div class="hero-body">
    <div class="container has-text-centered">
      <h1 class="title">
        Log In
      </h1>
    </div>
  </div>
</section>

<section class="section">
  <div class="columns is-centered">
    <div class="column is-one-third">
      <%= form_for(:session, url: login_path) do |f| %>

      <div class="field">
          <%= f.label :email %>
          <%= link_to "(resend activation email)", new_account_activation_url(email: @user.email) if @user%>
          <div class="control">
            <%= f.email_field :email, class: 'input', type: 'email' %>
          </div>
      </div>

      <div class="field">
          <%= f.label :password %>
          <%= link_to "(forgot password)", new_password_reset_path %>
          <div class="control">
            <%= f.password_field :password, class: 'input', type: 'password' %>
          </div>
      </div>

      <div class="field">
        <div class="control">
            <%= f.label :remember_me, class: "checkbox" do %>
            <%= f.check_box :remember_me %>
            <span>Remember me on this computer</span>
            <% end %>
          </div>
        </div>

        <div class="field">
          <div class="control">
            <%= f.submit "Log in", class: "button is-link" %>
          </div>
        </div>

      <% end %>
      <br>
      <p>New user? <%= link_to "Sign up now!", signup_path %></p>
    </div>
  </div>
</section>
