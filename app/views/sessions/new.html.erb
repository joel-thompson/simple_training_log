<% provide(:title, "Log in") %>
<% provide(:heading_title, "Log in") %>

<section class="section">
  <div class="columns is-centered">
    <div class="column is-one-third">
      <%= form_for(:session, url: login_path) do |f| %>

      <div class="field">
          <%= f.label :email, class: 'label' %>
          <%= link_to "(resend activation email)", new_account_activation_url(email: @user.email) if @user%>
          <div class="control">
            <%= f.email_field :email, class: 'input', type: 'email' %>
          </div>
      </div>

      <div class="field">
          <%= f.label :password, class: 'label' %>

          <div class="control">
            <%= f.password_field :password, class: 'input', type: 'password' %>
          </div>
      </div>

      <div class="field">
        <div class="control">
            <%= f.label :remember_me, class: "checkbox" do %>
            <%= f.check_box :remember_me %>
            Remember me on this computer
            <% end %>
          </div>
        </div>

        <div class="field">
          <div class="control">
            <%= f.submit "Log in", class: "button is-link" %>
          </div>
        </div>

      <% end %>
      <br>
      <p>New user? <%= link_to "Sign up now!", signup_path %></p>
      <p>Forgot password? <%= link_to "Click here", new_password_reset_path %></p>
    </div>
  </div>
</section>
