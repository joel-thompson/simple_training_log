<% provide(:title, "Log in") %>
<% provide(:heading_title, "Log in") %>

<section class="section">
  <div class="columns is-centered">
    <div class="column is-one-third">

      <%= link_to "Send new activation email", new_account_activation_url(email: @user.email), class: 'button is-link' if @user %>

      <%= form_for(:session, url: login_path) do |f| %>

        <%= render "_components/forms/email_field", form: f  %>
        <%= render "_components/forms/password_field", form: f %>

        <%=
          render "_components/forms/check_box",
          form: f,
          text: "Remember me on this computer",
          attribute: :remember_me
        %>

        <%= render "_components/forms/submit", form: f, text: "Log In" %>

      <% end %>
      <br>
      <p>New user? <%= link_to "Sign up now!", signup_path %></p>
      <p>Forgot password? <%= link_to "Click here", new_password_reset_path %></p>
    </div>
  </div>
</section>
