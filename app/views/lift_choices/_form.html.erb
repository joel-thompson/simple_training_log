<%= form_for(@lift_choice) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <div class="field">
    <%= f.label :name, class: 'label' %>
    <div class="control">
      <%= f.text_field :name, class: 'input', type: 'text', placeholder: "e.g. Barbell Squat" %>
    </div>
  </div>

  <div class="field">
    <%= f.label :default_sets, class: 'label' %>
    <div class="control">
      <%= f.number_field :default_sets, class: 'input', type: 'number', placeholder: "e.g. 3", min: 1 %>
    </div>
  </div>

  <div class="field">
    <%= f.label :default_reps, class: 'label' %>
    <div class="control">
      <%= f.number_field :default_reps, class: 'input', type: 'number', placeholder: "e.g. 5", min: 1 %>
    </div>
  </div>

  <div class="field">
    <div class="control">
      <%= f.label :has_weight, class: "checkbox" do %>
        <%= f.check_box :has_weight %>
          Has Weight?
      <% end %>
    </div>
  </div>

  <div class="field">
    <div class="control">
      <%= f.submit yield(:button_text), class: "button is-link" %>
    </div>
  </div>
<% end %>
