<%= form_for(@lift_choice) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <%= render "_components/forms/text_field", form: f, attribute: :name, placeholder: "e.g. Barbell Squat" %>

  <%=
    render "_components/forms/number_field", form: f,
    attribute: :default_sets,
    placeholder: "e.g. 3",
    min: 1
  %>

  <%=
    render "_components/forms/number_field", form: f,
    attribute: :default_reps,
    placeholder: "e.g. 5",
    min: 1
  %>

  <%= render "_components/forms/check_box", form: f, text: "Has Weight?", attribute: :has_weight %>
  <%= render "_components/forms/submit", form: f, text: yield(:button_text) %>
<% end %>
